# Uncomment the next line to define a global platform for your project
platform :ios, '12.1'

target 'shopping' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for shopping
  
  # 网络请求框架
  pod 'Moya'
  # iOS崩溃日志分析
  pod 'Bugly'
  # 代码布局框架
  pod 'SnapKit'
  # 页面布局框架
  pod 'IGListKit'
  # JSON转Model
  pod 'HandyJSON'
  # 异步编程框架
  pod 'PromiseKit'
  # 数据库
  pod 'WCDB.swift'
  # 图片缓存库
  pod 'Kingfisher'
  # 指示器
  pod 'MBProgressHUD'
  # 键盘监听
  pod 'IQKeyboardManagerSwift'
  # 图片选择器
  pod 'TZImagePickerController'
  # 视图层级
  pod 'Reveal-SDK', '24', :configurations => ['Debug']
  # 轮播图
  pod 'SDCycleScrollView'
  # 响应式框架
  pod 'RxSwift'
  # 界面刷新
  pod 'MJRefresh'
  # 加密库
  pod 'CryptoSwift'
  # JSON
  pod 'SwiftyJSON'
  
  target 'shoppingTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'shoppingUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
